{
  "tasks": {
    "exec": "deno run --allow-net --allow-env cli.ts",
    "check": "deno fmt --check --ignore=CHANGELOG.md && deno lint"
  },
  "velociraptor": {
    "scripts": {
      "exec": "deno run --allow-net --allow-env cli.ts",
      "check": "deno fmt --check --ignore=CHANGELOG.md && deno lint",
      "pre-commit": {
        "cmd": [
          "vr check"
        ],
        "gitHook": "pre-commit"
      }
    }
  }
}
